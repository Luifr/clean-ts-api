{
  "name": "clean-ts-api",
  "version": "1.0.0",
  "description": "Complete Typescript API with TDD, Clean Architecture, Design Patterns and SOLID.",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --passWithNoTests --no-cache",
    "test:unit": "npm test -- -c jest-unit.config.js",
    "test:integration": "npm test -- -c jest-integration.config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "lint": "eslint src/** --ext .ts",
    "lint-fix": "eslint src/** --ext .ts --fix"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && bash scripts/reject-by-pattern.sh",
      "pre-push": "npm run test:ci"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint-fix",
      "npm run test:staged"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Luifr/clean-ts-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Luifr/clean-ts-api/issues"
  },
  "homepage": "https://github.com/Luifr/clean-ts-api#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@shelf/jest-mongodb": "^2.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^14.18.12",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "ts-jest": "^26.5.6",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "mongodb": "^4.4.1",
    "validator": "^13.7.0"
  }
}
